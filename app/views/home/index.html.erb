            <% if outfit.images.attached? && outfit.images.first.present? %>
              <%= image_tag outfit.images.first %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="theme-section">
    <h3 class="section-label">AND...</h3>
    <h3 class="theme-name">SPECIAL OCCASIONS</h3>
    <div class="outfits-grid">
      <%= link_to outfits_path(theme: "special occasions") do %>
