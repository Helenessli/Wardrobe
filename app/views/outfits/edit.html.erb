<h1>Edit Outfit: <%= @outfit.theme %></h1>

<%= form_with(model: @outfit, local: true) do |form| %>
  <div>
    <%= form.label :theme %>
    <%= form.text_field :theme %>
  </div>

  <% if @outfit.images.attached? %>
    <div>
      <h3>Current Photos</h3>
      <div class="row g-4">
        <% @outfit.images.each do |image| %>
          <div class="col-md-4">
            <%= image_tag image, class: "img-fluid rounded outfit-image" %>
            <%= button_to "Remove Photo", delete_image_outfit_path(@outfit, image_id: image.id),
                method: :delete,
                class: "btn btn-danger mt-2" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div>
    <h3>Items</h3>
    
    <%= form.fields_for :items do |item_form| %>
      <div>
        <div>
          <%= item_form.label :name %>
          <%= item_form.text_field :name %>
        </div>

        <div>
          <%= item_form.label :brand %>
          <%= item_form.text_field :brand %>
        </div>

        <div>
          <%= item_form.label :link %>
          <%= item_form.text_field :link %>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update Outfit" %>
  </div>
<% end %>

<%= link_to "Back to outfits", outfits_path %> 