<div class="outfit-details">
  <h1>Outfit: <%= @outfit.theme %></h1>
  
  <div class="images-container">
    <% if @outfit.images.attached? %>
      <% @outfit.images.each do |image| %>
        <%= image_tag image %>
      <% end %>
    <% end %>
  </div>

  <div class="items-list">
    <h2>Items in this outfit:</h2>
    <% if @outfit.items.any? %>
      <ul>
        <% @outfit.items.each do |item| %>
          <li>
            <strong><%= item.name %></strong>
            <br>
            Brand: <%= item.brand %>
            <br>
            <%= link_to "Shop this item", item.link, target: "_blank", class: "item-link" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No items have been added to this outfit yet.</p>
    <% end %>
  </div>

  <div class="actions">
    <%= link_to "Back to all outfits", outfits_path, class: "back-button" %>
    <%= button_to "Delete Outfit", 
                  outfit_path(@outfit), 
                  method: :delete,
                  class: "delete-button",
                  data: { confirm: "Are you sure you want to delete this outfit?" } %>
  </div>
</div>