<div class="container mt-4">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to "EDIT", edit_outfit_path(@outfit), class: "text-decoration-none text-dark me-3 mr-3" %>
    <%= link_to "DELETE", outfit_path(@outfit), 
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
        class: "text-decoration-none text-dark" %>
  </div>

  <div class="row">
    <% if @outfit.images.attached? %>
      <div class="col-md-6">
        <%= image_tag @outfit.images.first, class: "img-fluid rounded mb-4", style: "width: 100%; height: auto; box-shadow: 8px 8px 12px rgba(0,0,0,0.1);" %>
      </div>

      <div class="col-md-6">
        <div class="row">
          <% @outfit.images.drop(1).each do |image| %>
            <div class="col-6 mb-4">
              <%= image_tag image, class: "img-fluid rounded", style: "width: 250px; height: 330px; box-shadow: 8px 8px 12px rgba(0,0,0,0.1);" %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row mt-5">
    <div class="col-12">
      <div class="row">
        <% @outfit.items.each_with_index do |item, index| %>
          <div class="col-6 mb-5">
            <h3 class="mb-4">ITEM <%= index + 1 %></h3>
            
            <div class="d-flex justify-content-between align-items-baseline">
              <div>
                <h3 class="mb-1" style="font-size: 1rem;">NAME</h3>
                <p class="mb-3"><%= item.name %></p>
              </div>
              
              <div class="text-end">
                <h3 class="mb-1 fs-5" style="font-size: 1rem;">BRAND</h3>
                <p>
                  <%= link_to item.brand, item.link, class: "text-dark text-decoration-underline", target: "_blank" %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>